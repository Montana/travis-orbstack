FROM ruby:3.4-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends     build-essential postgresql-client curl gnupg bash     && rm -rf /var/lib/apt/lists/*

RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash -  && apt-get install -y nodejs  && npm install -g yarn

COPY Gemfile Gemfile.lock* /app/
RUN bundle install --jobs=3 --retry=3

COPY . /app
RUN chmod +x /app/scripts/ci_test.sh
